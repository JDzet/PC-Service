<Page x:Class="PC_Service.Pages.Warehouse.WarehouseRemains"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:PC_Service.Pages.Warehouse"
      mc:Ignorable="d" 
      d:DesignHeight="650" d:DesignWidth="1250"
      Title="WarehouseRemains">

    <Grid Background = "Gray" Name="MainGrid">
        <Grid VerticalAlignment="Stretch" Margin="20,40,20,70">
            <DataGrid x:Name="DataGrid"  
                      Background="#9E9E9E"    
                      FontSize="14" FontWeight="Bold"    
                      AutoGenerateColumns="False" IsReadOnly="True">

                <DataGrid.Columns>
                    <DataGridTextColumn Header="Артикула" Binding="{Binding Product.ProductArticle}"/>
                    <DataGridTextColumn Header="Название" Binding="{Binding Product.ProductName}"/>
                    <DataGridTextColumn Header="Изображение"/>
                    <DataGridTextColumn Header="Количество" Binding="{Binding RemnantsQuantity}"/>
                </DataGrid.Columns>
            </DataGrid>
        </Grid>

        <TextBlock Text="Всего - 0" FontSize="15" Margin="20,20,0,30"
                   VerticalAlignment="Bottom"
                   />
    </Grid>
</Page>
