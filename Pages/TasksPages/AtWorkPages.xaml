<Page x:Class="PC_Service.Pages.TasksPages.AtWorkPages"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:PC_Service.Pages.TasksPages"
      mc:Ignorable="d" 
      d:DesignHeight="650" d:DesignWidth="1250"
      Title="AtWorkPages">

    <Grid  Background ="Gray" Name="MainGridFinance">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <!-- Верхняя панель -->
        <Grid Grid.Row="0" Margin="20,10,0,0">
            <Button Content="Добавить задачу" Margin="10" VerticalAlignment="Center" HorizontalAlignment="Left" />
        </Grid>

        <!-- Дата грид -->
        <DataGrid Grid.Row="1" Background="#9E9E9E" Margin="20">
            <!-- Настройки столбцов и привязка данных -->
        </DataGrid>
    </Grid>
</Page>
